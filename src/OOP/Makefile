##### CONSTANT BOILER PLATE #######
DIRPATH=.
BINPATH=.\..\..\bin
OBJPATH=.\..\..\obj

FILENAME=oop


### app file ending ###
# $(MAKE_CALL) code here \
!ifndef 0 # \  
EXE_FILETYPE=.exe # \
!else
# Make code here 
EXE_FILETYPE=#
#
!endif


INCL= 
CC=gcc
CFLAGS= #-I $(INCL)



SOURCES = 
HEADERS = 
APPS = 

FILEBIN=$(OBJPATH)\$(FILENAME).o
CFILE=$(DIRPATH)\$(FILENAME).c
FILE_EXE=$(BINPATH)\$(FILENAME)$(EXE_FILETYPE)

SOURCES = $(SOURCES) $(CFILE)
HEADERS = $(HEADERS) 
APPS = $(APPS) $(FILE_EXE)

OBJBUILDS =

##### VARYING FILE BOILER PLATE #######

CLASSDIR=$(DIRPATH)\classes

OBJ1PATH=$(CLASSDIR)
OBJ1NAME=Statistics
OBJ1SRC=$(CLASSDIR)\$(OBJ1NAME).c
OBJ1HDR=$(CLASSDIR)\$(OBJ1NAME).h
OBJ1=$(OBJDIRPATH)\$(OBJ1NAME).o

SOURCES = $(SOURCES) $(OBJ1SRC)
HEADERS = $(HEADERS) $(OBJ1HDR)
OBJECTS = $(OBJECTS) $(OBJ1)
OBJSRCS = $(SOURCES) $(OBJ1SRC)
OBJBUILDS = $(OBJBUILDS) 1


OBJ2PATH=$(CLASSDIR)
OBJ2NAME=Book
OBJ2SRC=$(CLASSDIR)\$(OBJ2NAME).c
OBJ2HDR=$(CLASSDIR)\$(OBJ2NAME).h
OBJ2=$(OBJDIRPATH)\$(OBJ2NAME).o

SOURCES = $(SOURCES) $(OBJ2SRC)
HEADERS = $(HEADERS) $(OBJ2HDR)
OBJECTS = $(OBJECTS) $(OBJ2)
OBJSRCS = $(SOURCES) $(OBJ1SRC)
OBJBUILDS = $(OBJBUILDS) 2


OBJ3PATH=$(CLASSDIR)
OBJ3NAME=MemBook
OBJ3SRC=$(CLASSDIR)\$(OBJ3NAME).c
OBJ3HDR=$(CLASSDIR)\$(OBJ3NAME).h
OBJ3=$(OBJDIRPATH)\$(OBJ3NAME).o

SOURCES = $(SOURCES) $(OBJ3SRC)
HEADERS = $(HEADERS) $(OBJ3HDR)
OBJECTS = $(OBJECTS) $(OBJ3)
OBJSRCS = $(SOURCES) $(OBJ3SRC)
OBJBUILDS = $(OBJBUILDS) 3


OBJ4PATH=$(CLASSDIR)
OBJ4NAME=DiskBook
OBJ4SRC=$(CLASSDIR)\$(OBJ4NAME).c
OBJ4HDR=$(CLASSDIR)\$(OBJ4NAME).h
OBJ4=$(OBJDIRPATH)\$(OBJ4NAME).o

SOURCES = $(SOURCES) $(OBJ4SRC)
HEADERS = $(HEADERS) $(OBJ4HDR)
OBJECTS = $(OBJECTS) $(OBJ4)
OBJSRCS = $(SOURCES) $(OBJ4SRC)
OBJBUILDS = $(OBJBUILDS) 4



# Code below should allow $(MAKE_CALL) and make to operate successfully
# $(MAKE_CALL) code here \
!ifndef 0 # \  
MV=move # \
RM=del # \
CP=copy # \
MAKE_CALL=nmake # \
!else
# Make code here 
MV=mv -f # 
RM=rm -f # 
CP=cp -f # 
MAKE_CALL=make #
# 
!endif



##### CONSTANT BUILD #######
MAKE: $(FILEBIN) $(OBJECTS)
  $(MAKE_CALL) build
  $(CC) $(CFLAGS) $(FILEBIN) $(OBJECTS) -o $(FILE_EXE)
  $(MAKE_CALL) clean_up

MAKE_OBJ: $(FILEBIN) $(OBJECTS)
  $(MAKE_CALL) build
  $(CC) $(CFLAGS) $(FILEBIN) $(OBJECTS) -o $(FILE_EXE)

fast: $(FILEBIN) $(OBJECTS)
  $(CC) $(CFLAGS) $(FILEBIN) $(OBJECTS) -o $(FILE_EXE)
  $(MAKE_CALL) clean_up

$(FILEBIN): $(CFILE)
  $(CC) -c $(CFLAGS) $(CFILE) -o $(FILEBIN)
  $(MAKE_CALL) BUILD_OBJ

build:
  $(CP) blankmake Makefile
  FOR %%i IN ($(OBJBUILDS))\
    DO \
      @echo( $$(CC) $$(CFLAGS) -c $$(OBJ%%iSRC) -o $$(OBJ%%i) >> Makefile

run:
  ($(FILE_EXE))

clean:
  $(RM) $(APPS)

clean_up:
  $(RM) $(FILEBIN) $(OBJECTS)

clean_all:
  $(MAKE_CALL) clean_up
  $(MAKE_CALL) clean
  
BUILD_OBJ: 
  @echo building...
#####  VARIABLE BUILD  #####
 $(CC) $(CFLAGS) -c $(OBJ1SRC) -o $(OBJ1) 
 $(CC) $(CFLAGS) -c $(OBJ2SRC) -o $(OBJ2) 
 $(CC) $(CFLAGS) -c $(OBJ3SRC) -o $(OBJ3) 
 $(CC) $(CFLAGS) -c $(OBJ4SRC) -o $(OBJ4) 
